{% extends 'base.html.twig' %}

{% block title %}Me contacter{% endblock %}

{% block body %}
    <section class="contact d-flex flex-column align-items-center justify-content-center">
        <h1 class="">Me contacter</h1>
        <div class="container col-10 col-md-7 col-lg-6 col-xl-5">
            {{ form_start(form) }}
            <div>
                <div class="d-flex align-items-center justify-content-between">
                    {{ form_label(form.firstname, 'Pr√©nom') }}
                    {{ form_widget(form.firstname) }}
                </div>
                <div class="d-flex align-items-center justify-content-between">
                    {{ form_label(form.lastname, 'Nom') }}
                    {{ form_widget(form.lastname) }}
                </div>
            </div>
            <div class="d-flex align-items-center justify-content-between">
                {{ form_label(form.email, 'Email') }}
                {{ form_widget(form.email) }}
            </div>
            <div class="d-flex align-items-center justify-content-between">
                {{ form_label(form.subject, 'Objet') }}
                {{ form_widget(form.subject) }}
            </div>
            <div class="d-flex align-items-center justify-content-between">
                {{ form_label(form.message, 'Message') }}
                {{ form_widget(form.message) }}
            </div>
            <div class="d-flex align-items-center justify-content-end">
                <button>{{ ('Envoyer') }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}
