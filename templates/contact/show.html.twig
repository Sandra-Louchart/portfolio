{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>First</th>
                <td>{{ contact.first }}</td>
            </tr>
            <tr>
                <th>Last</th>
                <td>{{ contact.last }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ contact.adress }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ contact.number }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ contact.mail }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contact_index') }}">back to list</a>

    <a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>

