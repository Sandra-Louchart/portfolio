{% extends 'base.html.twig' %}

{% block title %}Administrative index{% endblock %}

{% block body %}
    <h1>Administrative index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First</th>
                <th>Last</th>
                <th>Adress</th>
                <th>Number</th>
                <th>Zip</th>
                <th>City</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for administrative in administratives %}
            <tr>
                <td>{{ administrative.id }}</td>
                <td>{{ administrative.first }}</td>
                <td>{{ administrative.last }}</td>
                <td>{{ administrative.adress }}</td>
                <td>{{ administrative.number }}</td>
                <td>{{ administrative.zip }}</td>
                <td>{{ administrative.city }}</td>
                <td>
                    <a href="{{ path('administrative_show', {'id': administrative.id}) }}">show</a>
                    <a href="{{ path('administrative_edit', {'id': administrative.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('administrative_new') }}">Create new</a>
{% endblock %}
